<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="backend-jpa-unit">
		<non-jta-data-source>java:comp/env/jdbc/EurekaBackend</non-jta-data-source>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.Job</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.JobEvent</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.Configuration</class>
		<properties>
			<!-- Disable the second-level cache -->
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<!-- Default is false for backwards compatibility. Should be used on all 
				new projects -->
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>
	</persistence-unit>
</persistence>