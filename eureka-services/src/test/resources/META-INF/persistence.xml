<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="services-jpa-unit"
		transaction-type="RESOURCE_LOCAL">
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.AbstractFileInfo</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.Categorization</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.ExtendedProposition</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.FileError</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.FileUpload</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.FileWarning</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.HighLevelAbstraction</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.LowLevelAbstraction</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.PropertyConstraint</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.Proposition</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.Relation</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.RelationOperator</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.Role</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.SimpleParameterConstraint</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.SliceAbstraction</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.SystemProposition</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.TemporalPattern</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.TimeUnit</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.User</class>
		<class>edu.emory.cci.aiw.cvrg.eureka.common.entity.ValueComparator</class>

		<properties>
			<!-- Disable the second-level cache -->
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.url" value="jdbc:h2:mem:services-test" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.connection.pool_size" value="1" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />

			<!-- Default is false for backwards compatibility. Should be used on all
				new projects -->
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>
	</persistence-unit>
</persistence>
