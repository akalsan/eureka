	<!-- THIS LISTENER CONFIGURES THE GUICE INJECTION AND SETS UP JERSEY, JPA, 
		ETC -->
	<listener>
		<listener-class>edu.emory.cci.aiw.cvrg.eureka.services.config.ConfigListener</listener-class>
	</listener>

	<!-- PROVIDE THE URLS FOR THE BACK-END SERVICES -->
	<context-param>
		<description>The URL used to access configuration information from the back-end services.  The ID of the user should be appended to the URL.</description>
		<param-name>backend-config-url</param-name>
		<param-value>https://eureka.cci.emory.edu/eureka-protempa-etl/api/config</param-value>
	</context-param>
	<context-param>
		<description>The URL used to submit a job to the back-end services.</description>
		<param-name>backend-submission-url</param-name>
		<param-value>https://eureka.cci.emory.edu/eureka-protempa-etl/api/job/add</param-value>
	</context-param>
	<context-param>
		<description>The URL used to fetch job status updates.</description>
		<param-name>backend-update-url</param-name>
		<param-value>https://eureka.cci.emory.edu/eureka-protempa-etl/api/job/status</param-value>
	</context-param>

